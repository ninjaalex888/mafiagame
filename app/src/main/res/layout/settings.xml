<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/man_suit"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:id="@+id/settingsTitle"
        android:textSize="15pt"
        android:layout_marginTop="15pt"
        android:layout_marginLeft="40pt"
        android:textColor="#e5e5e5"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:rowCount="3"
        android:columnCount="2"
        android:textColor="#e5e5e5">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50pt"
            android:textColor="#e5e5e5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textSize="8pt"
                android:id="@+id/music_label"
                android:layout_weight="1"
                android:layout_marginLeft="40pt"
                android:layout_marginRight="2pt"
                android:textColor="#e5e5e5">
            </TextView>


            <Switch
                android:layout_height="wrap_content"
                android:id="@+id/music_switch"
                android:layout_weight="1"
                android:layout_marginRight="15pt"
                android:layout_marginLeft="5pt"
                android:layout_column="1"
                android:layout_span="5"
                android:textColor="#a6a6a6"/>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10pt"
            android:textColor="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Sounds"
                android:textSize="8pt"
                android:id="@+id/notify_sounds"
                android:layout_weight="1"
                android:layout_marginLeft="40pt"
                android:layout_marginRight="5pt"
                android:layout_marginTop="3pt"
                android:textColor="#ffffff"
        />

            <Switch
                android:layout_height="wrap_content"
                android:id="@+id/notify_switch"
                android:layout_weight="1"
                android:layout_marginRight="15pt"
                android:layout_marginLeft="2pt"
                android:textColor="#ffffff"/>


        </TableRow>

    </TableLayout>

</LinearLayout>